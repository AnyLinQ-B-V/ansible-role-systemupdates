---
#
# Ansible managed
#
exclude_paths:
  - ./meta/preferences.yml
  - ./molecule/default/prepare.yml
  - ./molecule/default/converge.yml
  - ./molecule/default/verify.yml
  - ./molecule/default/collections.yml
  - ./.tox
  - ./.cache
  - ./.github
  - ./requirements.yml

# Rules to be skipped
skip_list:
  - 'yaml'               # Skip YAML syntax checking (already done by yamllint)
  - 'role-name'          # Skip role name checking
  - 'experimental'       # Skip experimental rules
  - 'line-length'        # Skip line length checking
